se.courseName;\n      courseToEdit.status = 'changed';\n      this.editTableVisible = false;\n    },\n\n    cancelEdit() {\n      this.editTableVisible = false;\n    },\n\n    test() {\n      this.courses[0].status = 'changed';\n    }\n\n  }\n};","map":{"version":3,"mappings":"AAmDA,SAASA,SAAT,EAAoBC,YAApB,QAAwC,cAAxC;AACA,eAAe;AACXC,MAAI,GAAG;AACH,WAAO;AACHC,sBAAgB,EAAC,KADd;AAEHC,wBAAkB,EAAC,KAFhB;AAGHC,gBAAU,EAAC,CAAC,EAAD,CAHR;AAIHC,eAAS,EAAE;AACPC,gBAAQ,EAAE,MADH;AAEPC,aAAK,EAAE,MAFA;AAGPC,aAAK,EAAE;AAHA,OAJR;AASHC,eAAS,EAAE,CACP;AACIC,YAAI,EAAE,OADV;AAEIC,WAAG,EAAE,IAFT;AAGIC,YAAI,EAAE,CACF;AAACF,cAAI,EAAC;AAAN,SADE,EAEF;AAACA,cAAI,EAAC;AAAN,SAFE;AAHV,OADO,EASP;AACIA,YAAI,EAAE,QADV;AAEIC,WAAG,EAAE,KAFT;AAGIC,YAAI,EAAE,CACF;AAACF,cAAI,EAAC;AAAN,SADE,EAEF;AAACA,cAAI,EAAC;AAAN,SAFE;AAHV,OATO,CATR;AA2BHG,aAAO,EAAE,CACL;AACIC,gBAAQ,EAAE,CADd;AAEIC,kBAAU,EAAE,MAFhB;AAGIC,iBAAS,EAAE,YAHf;AAIIC,kBAAU,EAAE,GAJhB;AAKIC,eAAO,EAAE,GALb;AAOIC,iBAAS,EAAE,EAPf;AAQIC,mBAAW,EAAE,UARjB;AASIC,eAAO,EAAE,EATb;AAUIC,kBAAU,EAAE,KAVhB;AAWIC,cAAM,EAAE;AAXZ,OADK,CA3BN;AA0CHC,gBAAU,EAAE;AACRT,kBAAU,EAAE,EADJ;AAERN,iBAAS,EAAE,EAFH;AAGRgB,aAAK,EAAE;AAHC;AA1CT,KAAP;AAgDH,GAlDU;;AAmDXC,SAAO,EAAE;AACL;AACAC,qBAAiB,CAACC,GAAD,EAAMC,QAAN,EAAgB;AAAC;AAC9B,UAAGD,GAAG,CAACA,GAAJ,CAAQL,MAAR,IAAkB,SAArB,EACI,OAAO,cAAP;AACJ,UAAGK,GAAG,CAACA,GAAJ,CAAQL,MAAR,IAAkB,SAArB,EACI,OAAO,cAAP;AACP,KAPI;;AAQLO,gBAAY,CAACC,KAAD,EAAQ9B,IAAR,EAAa;AACrBD,kBAAY,CAACgC,OAAb,CACI,cAAY/B,IAAI,CAACc,UAAjB,GAA4B,GADhC,EAEI,KAFJ,EAGI;AACAkB,yBAAiB,EAAE,IADnB;AAEAC,wBAAgB,EAAE,IAFlB;AAGAC,YAAI,EAAE;AAHN,OAHJ,EASKC,IATL,CASU,MAAM;AACRnC,YAAI,CAACsB,MAAL,GAAc,SAAd;AACAxB,iBAAS,CAAC;AACNoC,cAAI,EAAE,SADA;AAENE,iBAAO,EAAE;AAFH,SAAD,CAAT;AAIH,OAfL,EAgBKC,KAhBL,CAgBW,MAAM;AACTvC,iBAAS,CAAC;AACNoC,cAAI,EAAE,MADA;AAENE,iBAAO,EAAE;AAFH,SAAD,CAAT;AAIH,OArBL;AAsBH,KA/BI;;AAgCLE,cAAU,CAACR,KAAD,EAAQ9B,IAAR,EAAc;AACpB;AACA,WAAKuB,UAAL,CAAgBT,UAAhB,GAA6Bd,IAAI,CAACc,UAAlC;AACA,WAAKb,gBAAL,GAAwB,IAAxB;AACH,KApCI;;AAqCLsC,cAAU,CAACC,YAAD