<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jwsystem.dao.StudentDao">
    <!-- 新增学生 -->
    <insert id="insertUser" parameterType="com.jwsystem.entity.User">
        insert into student (
            (role,
             number,
             id,
             name,
             password,
             phone,
             email,
             status,
             major,
             college)
        values
            (#{role},#{number},#{id},#{name},#{password},#{phone},#{email},#{status},#{major},#{college})
    </insert>

    <!--修改学生信息-->
    <update id="updateStuInfo" parameterType="com.jwsystem.entity.User">
        UPDATE student
        SET role = #{role},
            number = #{number},
            id = #{id},
            name = #{name},
            password = #{password},
            phone = #{phone},
            email = #{email},
            status = #{status},
            major = #{major},
            college = #{college}
        WHERE
            number = #{number}
    </update>

    <!--修改学生密码-->
    <update id="updatePwdByNumber">
        UPDATE student
        SET password = #{password}
        WHERE
            number = #{number}
    </update>

    <!--查看所有学生信息-->
    <select id="getAllStu" resultType="com.jwsystem.entity.User">
        SELECT
            role,
            number,
            id,
            name,
            password,
            phone,
            email,
            status,
            major,
            college
        FROM
            student
    </select>

    <!--根据身份证号查找-->
    <select id="selectById" resultType="com.jwsystem.entity.Student">
        SELECT
            *
        FROM
            student
        WHERE
            id = #{id}
    </select>

    <!--查看指定学生信息-->
    <select id="getUserByNumber" resultType="com.jwsystem.entity.User">
        SELECT
            role,
            number,
            id,
            name,
            password,
            phone,
            email,
            status,
            major,
            college
        FROM
            student
        WHERE
            number = #{number}
    </select>

    <!--学生查看个人信息-->
    <select id="getStuInfo" resultType="com.jwsystem.entity.Student">
        SELECT
            *
        FROM
            student
        WHERE
            number = #{number}
    </select>

    <!-- 删除学生 -->
    <delete id="deleteStuByNumber">
        DELETE FROM student WHERE number = #{number}
    </delete>
</mapper>