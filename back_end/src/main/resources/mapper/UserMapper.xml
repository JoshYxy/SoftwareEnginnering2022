<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jwsystem.dao.UserDao">
    <insert id="insertUser">
        INSERT INTO USER ( role, number, id, name, password, phone, email )
        VALUES(
                  #{role}, #{number}, #{id}, #{name}, #{password}, #{phone}, #{email}
              )
    </insert>

    <!--根据主键查询用户信息-->
    <select id="selectByNumber" resultType="com.jwsystem.entity.User" parameterType="long">
        select *
        from user
        where number = #{number}
    </select>

    <!--根据身份证查询用户信息-->
    <select id="selectById" resultType="com.jwsystem.entity.User" parameterType="string">
        select *
        from user
        where id = #{id}
    </select>

    <!--查询所有用户信息-->
    <select id="findAllUserInfo" resultType="com.jwsystem.entity.User">
        select *
        from user
    </select>

    <!--修改用户密码-->
    <update id="updateUserPwdByNumber" parameterType="com.jwsystem.entity.User">
        update user
        set
            password=#{password}
        where number = #{number}
    </update>

    <!--根据身份证号删除用户信息-->
    <delete id="deleteUserInfoById" parameterType="string">
        delete
        from user
        where id = #{id}
    </delete>

</mapper>