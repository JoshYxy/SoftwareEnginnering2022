<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jwsystem.dao.MajorDao">
    <!-- 新增专业 -->
    <insert id="insertMajor">
        INSERT INTO major ( name, college_name )
        VALUES (#{name},#{college_name})
    </insert>
    <!-- 根据学院name查询该学院下的所有专业 -->
    <select id="findMajorByCollegeName" resultType="java.lang.String">
        SELECT name
        FROM MAJOR WHERE college_name = #{college_name}
    </select>
    <!--根据id查询某专业是否存在 -->
    <select id="findMajorById" resultType="java.lang.Integer">
        SELECT name
        FROM MAJOR WHERE major_id = #{major_id}
    </select>
    <!-- 根据id修改某专业名 -->
    <select id="updateMajorNameById" resultType="java.lang.Integer">
        UPDATE MAJOR SET name = #{name} where major_id = #{major_id}
    </select>
    <!-- 删除专业 -->
    <delete id="deleteMajor">
        DELETE FROM Major WHERE name = #{name}
    </delete>
</mapper>