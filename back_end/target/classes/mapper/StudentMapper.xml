<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jwsystem.dao.StudentDao">
    <!-- 新增学生 -->
    <insert id="insertUser" parameterType="com.jwsystem.dto.User">
        insert into student
            (role,
             number,
             id,
             name,
             password,
             phone,
             email,
             status,
             major,
             college)
        values
            (#{role},#{number},#{id},#{name},#{password},#{phone},#{email},#{status},#{major},#{college})
    </insert>

    <!-- 学生修改手机号、邮箱、登陆密码 -->
    <update id="updateStuInfoByUser" parameterType="com.jwsystem.dto.User">
        UPDATE student
        SET password = #{password},
            phone = #{phone},
            email = #{email}
        WHERE
            number = #{number}
    </update>

    <!-- 管理员修改除学工号以外的信息 -->
    <update id="updateStuInfoByAdmin" parameterType="com.jwsystem.dto.User">
        UPDATE student
        SET role = #{role},
            id = #{id},
            name = #{name},
            password = #{password},
            phone = #{phone},
            email = #{email},
            status = #{status},
            major = #{major},
            college = #{college}
        WHERE
            number = #{number}
    </update>

    <!--修改学生密码-->
    <update id="updatePwdByNumber">
        UPDATE student
        SET password = #{password}
        WHERE
            number = #{number}
    </update>

    <!--查看所有学生信息-->
    <select id="getAllStu" resultType="com.jwsystem.dto.User">
        SELECT
            role,
            number,
            id,
            name,
            password,
            phone,
            email,
            status,
            major,
            college
        FROM
            student
    </select>

    <!--根据身份证号查找-->
    <select id="selectById" resultType="com.jwsystem.entity.user.Student">
        SELECT
            *
        FROM
            student
        WHERE
            id = #{id}
    </select>

    <!--根据学号查找-->
    <select id="selectByNum" resultType="com.jwsystem.entity.user.Student">
        SELECT
            *
        FROM
            student
        WHERE
            number = #{number}
    </select>

    <!--查看指定学生信息-->
    <select id="getUserByNumber" resultType="com.jwsystem.dto.User">
        SELECT
            role,
            number,
            id,
            name,
            password,
            phone,
            email,
            status,
            major,
            college
        FROM
            student
        WHERE
            number = #{number}
    </select>

    <!--学生查看个人信息-->
    <select id="getStuInfo" resultType="com.jwsystem.entity.user.Student">
        SELECT
            *
        FROM
            student
        WHERE
            number = #{number}
    </select>

    <!--根据学院查询是否存在学生-->
    <select id="getStuByCollegeName" resultType="java.lang.Integer">
        SELECT count(*)
        FROM student WHERE college = #{college_name} and status = "studying"
    </select>

    <!--根据专业查询是否存在学生-->
    <select id="getStuByMajor" resultType="java.lang.Integer">
        SELECT count(*)
        FROM student WHERE major = #{major} and status = "studying"
    </select>

    <!-- 删除学生 -->
    <delete id="deleteStuByNumber">
        DELETE FROM student WHERE number = #{number}
    </delete>
</mapper>